@model PayrollSystem.ViewModels.SaleVM
@for (int i = 0; i < Model.AvialableShops.Count; i++)
{
<tr>
    <td style="padding:0;">@Html.HiddenFor(x => Model.AvialableShops[i].SaleSalary)</td>
    <td style="padding:0;">@Html.HiddenFor(x => Model.AvialableShops[i].ShopId)</td>
    <td style="padding:0;">@Html.HiddenFor(x => Model.AvialableShops[i].ShopName)</td>
    <td>@Model.AvialableShops[i].ShopName</td>
    <td>@Model.AvialableShops[i].SaleSalary</td>
</tr>
}