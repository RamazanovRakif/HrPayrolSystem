@model Company
@{
    ViewData["Title"] = "Edit";
}



<div class="container" style="margin-top:15px; margin-right:40px;text-align:center; background-color:bisque">
    <form method="post" asp-controller="Company" asp-action="Edit" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="ID" />
        <div class="col-md-5">
            <div class="form-group">
                <label class="control-label">Adı</label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label disabled" >Açılma vaxtı</label>
                <input class="form-control" asp-for="OpenCompany" />
                <span asp-validation-for="OpenCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ünvan</label>
                <input class="form-control" asp-for="Addres" />
                <span asp-validation-for="Addres" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Yadda saxla" />
            </div>
        </div>
    </form>
</div>