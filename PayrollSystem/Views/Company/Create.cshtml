@model Company
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <form method="post" asp-controller="Company" asp-action="Create" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label lass="control-label">Adı</label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Açılma vaxtı</label>
                <input class="form-control" asp-for="OpenCompany" />
                <span asp-validation-for="OpenCompany" class=" text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class=" text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ünvan</label>
                <input class="form-control" asp-for="Addres" />
                <span asp-validation-for="Addres" class=" text-danger"></span>
            </div>
           
            <input type="submit" value="Yarat" class="btn btn-primary" />
        </div>
    </form>
</div>
