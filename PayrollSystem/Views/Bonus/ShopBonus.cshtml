@model PayrollSystem.ViewModels.SaleVM
@{
    ViewData["Title"] = "StoreBonus";
}

<div class="col-md-12">
    <div style="margin-top:10px; overflow-x:auto; overflow-y:auto;">
        <form asp-action="ShopBonus" asp-controller="Bonus">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="padding:0;"></th>
                        <th style="padding:0;"></th>
                        <th style="padding:0;"></th>
                        <th>Mağaza adı</th>
                        <th>Aylıq satış</th>
                    </tr>
                </thead>
                <tbody id="storeBonusAppend">
                    @for (int i = 0; i < Model.AvialableShops.Count; i++)
                    {
                    <tr>
                        <td style="padding:0;">@Html.HiddenFor(x => Model.AvialableShops[i].SaleSalary)</td>
                        <td style="padding:0;">@Html.HiddenFor(x => Model.AvialableShops[i].ShopId)</td>
                        <td style="padding:0;">@Html.HiddenFor(x => Model.AvialableShops[i].ShopName)</td>
                        <td>@Model.AvialableShops[i].ShopName</td>
                        <td>@Model.AvialableShops[i].SaleSalary</td>
                    </tr>
                    }
                </tbody>
            </table>
            <div class="d-flex">
                <div class="d-flex">
                    <div class="form-group col-md-4">
                        <input type="number" class="form-control" name="requiredSalary" placeholder="Tələb olunan məbləğ" />
                    </div>
                    <select class="form-control col-md-2" name="bonusform">
                        <option>Bonus forması</option>
                        <option value="0">Faiz</option>
                        <option value="1">Məbləğ</option>
                    </select>
                    <div class="form-group col-md-4">
                        <input type="number" class="form-control" name="bonus" placeholder="Bonus məbləği" />
                    </div>
                    <div class="col-md-3">
                        <input type="submit" value="Əlavə et" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <input type="hidden" class="storeBonusSkipCount" id="storeBonusTotalCount" value="@ViewBag.SkipCount" />
</div>

